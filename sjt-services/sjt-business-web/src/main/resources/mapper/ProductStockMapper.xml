<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sjt.business.mapper.ProductStockMapper">
    <parameterMap id="productStockParame" type="com.sjt.business.entity.ProductStock" />
    <resultMap id="productStockResult" type="com.sjt.business.entity.ProductStock" />

    <sql id="base_all">
        id, product_id, product_stock_num, order_stock_num, version
    </sql>

    <select id="selectByProductId" resultType="java.lang.Long" resultMap="productStockResult">
        select
        <include refid="base_all" />
        from t_product_stock
        where product_id = #{productId}
    </select>
</mapper>
